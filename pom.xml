<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.epam.InnokentiiObraztcov</groupId>
    <artifactId>InnokentiiObraztcov</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <java.source.version>1.8</java.source.version>
        <java.target.version>1.8</java.target.version>

        <testng.version>7.1.0</testng.version>

        <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
        <maven-surefire-plugin.version>2.22.2</maven-surefire-plugin.version>
    </properties>

    <profiles>
        <profile>
            <id>SumSub</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <suite.xml>SumSubTestSuit.xml</suite.xml>
            </properties>
        </profile>
        <profile>
            <id>DivMulti</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <suite.xml>DivMultiTestsSuit.xml</suite.xml>
            </properties>
        </profile>
    </profiles>
    <repositories>
        <repository>
            <id>project-local-repo</id>
            <url>file://${project.basedir}.m2/repository</url>
        </repository>
    </repositories>



    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>${testng.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.epam</groupId>
            <artifactId>calculator</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>C:/Users/Kesha/.m2/repository/EpamHomeWork/calculator-1.0.jar</systemPath>
        </dependency>


        <!--<dependency>
            <groupId>com.epam</groupId>
            <artifactId>calculator</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}.m2/repository/EpamHomeWorkcalculator-1.0.jar</systemPath>
        </dependency>-->
    </dependencies>




    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>${java.source.version}</source>
                    <target>${java.target.version}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${maven-surefire-plugin.version}</version>
                <configuration>
                    <suiteXmlFiles>
                        <suiteXmlFiles>C:\Users\Kesha\IdeaProjects\InnokentiiObraztcov\src\test\java\resources\SumSubTestSuit.xml</suiteXmlFiles>
                        <suiteXmlFiles>C:\Users\Kesha\IdeaProjects\InnokentiiObraztcov\src\test\java\resources\DivMultiTestsSuit.xml</suiteXmlFiles>
                    </suiteXmlFiles>
                    <!--<useFile>false</useFile>-->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>


